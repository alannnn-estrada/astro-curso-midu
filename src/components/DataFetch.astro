---
import { getPosts } from "../services/api";

// podemos ejecutar el js que queramos
const data = await getPosts();

// console.log(data);
---

<h1 class="text-2xl mb-5 font-bold">Ultimas publicacionesðŸ”¥:</h1>
<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
    {
        data.map((post: any) => (
            <a
                class="bg-slate-500/50 rounded-lg shadow-lg transition-all duration-200 ease-in-out hover:shadow-xl hover:scale-105 scale-100"
                href={`/blog/${post.id}`}
            >
                <img
                    src="https://picsum.photos/800"
                    alt="Random image"
                    class="w-full h-48 object-cover rounded-lg"
                />
                <div class="p-4">
                    <span
                        class:list={[
                            "text-sm",
                            {
                                "bg-red-500 p-2 rounded font-bold":
                                    post.id % 2 === 0,
                                hidden: post.id % 2 !== 0,
                            },
                        ]}
                    >
                        Tendencia
                    </span>
                    <h2 class="text-xl font-bold mt-2">"{post.title}"</h2>
                    <span class="text-sm text-gray-400">Post #{post.id}</span>
                    <p class="mt-2 text-gray-300">{post.body}</p>
                </div>
            </a>
        ))
    }
</div>
